<h1><%= @pnameform.pname18 %>s</h1>

<div class="media">
  <div class="media-body">
    <table class="table table hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @piece18s.each do |piece18| %>
        <tr>
          <td><strong><%= piece18.name %></strong></td>
          <td><%= link_to 'Edit', edit_pnameform_piece18_path(@pnameform, piece18) %></td>
          <td><%= link_to 'Delete', [@pnameform, piece18], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>  
</div> 
<br>

<%= link_to "New #{@pnameform.pname18}", new_pnameform_piece18_path %>
<%= link_to 'Back', @pnameform %>
