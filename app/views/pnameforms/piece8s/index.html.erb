<h1><%= @pnameform.pname8 %>s</h1>

<div class="media">
  <div class="media-body">
    <table class="table table hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @piece8s.each do |piece8| %>
        <tr>
          <td><strong><%= piece8.name %></strong></td>
          <td><%= link_to 'Edit', edit_pnameform_piece8_path(@pnameform, piece8) %></td>
          <td><%= link_to 'Delete', [@pnameform, piece8], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>  
</div> 
<br>

<%= link_to "New #{@pnameform.pname8}", new_pnameform_piece8_path %>
<%= link_to 'Back', @pnameform %>
