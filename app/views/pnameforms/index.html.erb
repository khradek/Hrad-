<h1>My Database</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pnameforms.each do |pnameform| %>
          <tr>
            <% if pnameform.user == current_user %>
              <td><%= pnameform.user.email if pnameform.user %></td>
              <td><%= link_to 'Add & Update', pnameform %></td>
              <td><%= link_to 'Edit Title Names', edit_pnameform_path(pnameform) %></td> 
            <% end %>   
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  



