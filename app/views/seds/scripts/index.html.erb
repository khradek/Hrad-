<h1>Your Scripts</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @scripts.each do |script| %>
          <tr>
            <td><strong><%= script.name %></strong></td>
            <td><%= link_to 'View', script %></td>
            <td><%= link_to 'Edit', edit_script_path(script) %></td>
            <td><%= link_to 'Delete', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to 'New Script', new_sed_script_path %>
